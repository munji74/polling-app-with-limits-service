{
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": {
          "type": "grafana",
          "uid": "-- Grafana --"
        },
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Shows which services are UP (green) or DOWN (red)",
      "gridPos": { "h": 5, "w": 24, "x": 0, "y": 0 },
      "id": 1,
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "justifyMode": "center",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "textMode": "value_and_name",
        "wideLayout": true
      },
      "pluginVersion": "10.0.0",
      "targets": [
        {
          "expr": "up{job=~\"api-gateway|user-service|poll-service|limits-service|naming-server|config-service\"}",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Service Health",
      "type": "stat",
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "color": "red", "index": 1, "text": "DOWN" } }, "type": "value" },
            { "options": { "1": { "color": "green", "index": 0, "text": "UP" } }, "type": "value" }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          }
        }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Requests per second by service",
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 5 },
      "id": 2,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{uri!~\".*actuator.*\"}[1m])) by (job)",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Request Rate",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "95th percentile response time in milliseconds",
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 5 },
      "id": 3,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{uri!~\".*actuator.*\"}[5m])) by (le, job)) * 1000",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Response Time (p95)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Heap memory usage in megabytes",
      "fieldConfig": {
        "defaults": {
          "unit": "decmbytes",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 14 },
      "id": 4,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\"}) by (job) / 1024 / 1024",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Memory Usage (MB)",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "CPU usage percentage by service",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" },
          "max": 100,
          "min": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 14 },
      "id": 5,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        {
          "expr": "process_cpu_usage * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "CPU Usage",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Database connection pool status",
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 23 },
      "id": 6,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "hikaricp_connections_active",
          "legendFormat": "{{application}} - Active",
          "refId": "A"
        },
        {
          "expr": "hikaricp_connections_idle",
          "legendFormat": "{{application}} - Idle",
          "refId": "B"
        }
      ],
      "title": "DB Connections",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Error rate by service",
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "color": { "mode": "palette-classic" }
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 23 },
      "id": 7,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "rate(logback_events_total{level=\"error\"}[5m])",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Error Rate",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Garbage collection overhead percentage",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "palette-classic" },
          "max": 100,
          "min": 0
        },
        "overrides": []
      },
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 23 },
      "id": 8,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "jvm_gc_overhead * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "GC Overhead",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Memory usage as percentage of max heap",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 31 },
      "id": 9,
      "options": {
        "orientation": "auto",
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "pluginVersion": "10.0.0",
      "targets": [
        {
          "expr": "(sum(jvm_memory_used_bytes{area=\"heap\"}) by (job) / sum(jvm_memory_max_bytes{area=\"heap\"}) by (job)) * 100",
          "legendFormat": "{{job}}",
          "refId": "A"
        }
      ],
      "title": "Memory Usage %",
      "type": "gauge",
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "max": 100,
          "min": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      }
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Rate limiting decisions - allowed vs denied",
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "denied" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "allowed" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          }
        ]
      },
      "gridPos": { "h": 7, "w": 12, "x": 12, "y": 31 },
      "id": 10,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom" },
        "tooltip": { "mode": "multi" }
      },
      "targets": [
        {
          "expr": "sum(rate(limits_requests_denied_total[1m]))",
          "legendFormat": "denied",
          "refId": "A"
        },
        {
          "expr": "sum(rate(limits_requests_allowed_total[1m]))",
          "legendFormat": "allowed",
          "refId": "B"
        }
      ],
      "title": "Rate Limiting",
      "type": "timeseries"
    },
    {
      "type": "row",
      "title": "Key User Actions",
      "id": 11,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 38 },
      "collapsed": false
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Request rate for common user actions measured at the upstream services (not the Gateway)",
      "fieldConfig": { "defaults": { "unit": "reqps" }, "overrides": [] },
      "gridPos": { "h": 9, "w": 12, "x": 0, "y": 39 },
      "id": 12,
      "options": {
        "legend": { "displayMode": "list", "placement": "bottom", "calcs": ["last", "mean"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "targets": [
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"user-service\",method=\"POST\",uri=\"/auth/sign-in\"}[1m]))", "legendFormat": "sign-in", "refId": "A" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"user-service\",method=\"POST\",uri=\"/auth/sign-up\"}[1m]))", "legendFormat": "sign-up", "refId": "B" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"user-service\",uri=~\"/auth/logout.*\"}[1m]))", "legendFormat": "logout", "refId": "C" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"poll-service\",method=\"POST\",uri=\"/api/polls\"}[1m]))", "legendFormat": "create-poll", "refId": "D" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"poll-service\",method=\"GET\",uri=\"/api/polls\"}[1m]))", "legendFormat": "list-polls", "refId": "E" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"poll-service\",method=\"GET\",uri=~\"/api/polls/.+\"}[1m]))", "legendFormat": "poll-details", "refId": "F" },
        { "expr": "sum(rate(http_server_requests_seconds_count{job=\"poll-service\",method=\"POST\",uri=~\"/api/polls/.+/vote\"}[1m]))", "legendFormat": "vote", "refId": "G" }
      ],
      "title": "User Actions - Request Rate",
      "type": "timeseries"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Count of user actions over the last 15 minutes at the upstream services",
      "fieldConfig": { "defaults": { "unit": "short", "decimals": 0 }, "overrides": [] },
      "gridPos": { "h": 9, "w": 12, "x": 12, "y": 39 },
      "id": 13,
      "options": {
        "colorMode": "value",
        "graphMode": "none",
        "justifyMode": "auto",
        "orientation": "horizontal",
        "reduceOptions": { "calcs": ["last"], "fields": "", "values": false },
        "textMode": "value_and_name",
        "wideLayout": true,
        "legend": { "displayMode": "list", "placement": "bottom" }
      },
      "pluginVersion": "10.0.0",
      "targets": [
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"user-service\",method=\"POST\",uri=\"/auth/sign-in\"}[15m])))", "legendFormat": "sign-in (15m)", "refId": "A" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"user-service\",method=\"POST\",uri=\"/auth/sign-up\"}[15m])))", "legendFormat": "sign-up (15m)", "refId": "B" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"user-service\",uri=~\"/auth/logout.*\"}[15m])))", "legendFormat": "logout (15m)", "refId": "C" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"poll-service\",method=\"POST\",uri=\"/api/polls\"}[15m])))", "legendFormat": "create-poll (15m)", "refId": "D" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"poll-service\",method=\"GET\",uri=\"/api/polls\"}[15m])))", "legendFormat": "list-polls (15m)", "refId": "E" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"poll-service\",method=\"GET\",uri=~\"/api/polls/.+\"}[15m])))", "legendFormat": "poll-details (15m)", "refId": "F" },
        { "expr": "round(sum(increase(http_server_requests_seconds_count{job=\"poll-service\",method=\"POST\",uri=~\"/api/polls/.+/vote\"}[15m])))", "legendFormat": "vote (15m)", "refId": "G" }
      ],
      "title": "User Actions - Count (last 15m)",
      "type": "stat"
    },
    {
      "datasource": { "type": "prometheus", "uid": "prometheus" },
      "description": "Top endpoints by request rate across services (helps verify exact 'uri' label values)",
      "fieldConfig": { "defaults": { "custom": { "align": "auto" } } },
      "gridPos": { "h": 9, "w": 24, "x": 0, "y": 48 },
      "id": 14,
      "options": {
        "showHeader": true,
        "sortBy": [ { "displayName": "Value", "desc": true } ]
      },
      "targets": [
        {
          "expr": "topk(20, sum(rate(http_server_requests_seconds_count[5m])) by (job, method, uri))",
          "legendFormat": "{{job}} {{method}} {{uri}}",
          "refId": "A"
        }
      ],
      "title": "Top Endpoints (5m)",
      "type": "table"
    }
  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "style": "dark",
  "tags": ["microservices", "essential"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["10s", "30s", "1m", "5m", "15m"]
  },
  "timezone": "browser",
  "title": "Microservices - Essential Metrics",
  "uid": "microservices-essential",
  "version": 0
}